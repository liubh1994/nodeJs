extends layout

block content
    form.form-horizontal(method='post')
        fieldset
            legend='用户登录'
            .control-group
                label.control-label(for='username')='用户名'
                .controls
                    input.input-xlarge(type='text' id='username' name='username')
            .control-group
                label.control-label(for='password')='登录密码'
                .controls
                    input.input-xlarge(type='password' id='password' name='password')
            .form-actions
                button(type='submit' class='btn btn-primary')='登入'


